{
  "name": "ExpensePal",
  "short_name": "ExpensePal",
  "description": "Track your expenses automatically from email notifications",
  "lang": "en",
  "dir": "ltr",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait",
  "scope": "/",
  "icons": [
    {
      "src": "/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
