# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Email Configuration (for automatic expense import)
# Trusted senders: info@card.vib.com.vn, no-reply@grab.com

# Primary Email Account
EMAIL_USER=your-primary@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_TLS=true

# Secondary Email Account (optional)
EMAIL_USER_2=your-secondary@gmail.com
EMAIL_PASSWORD_2=your-app-password-2
EMAIL_HOST_2=imap.gmail.com
EMAIL_PORT_2=993
EMAIL_TLS_2=true

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# OpenRouter API (for AI-powered email parsing and calorie estimation)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key
